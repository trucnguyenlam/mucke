mu bool add8(Int8 a, Int8 b, Int8 c)
  if(a = 0) c = b
  else (exists Int8 d, Int8 e. inc8_6(d, a) & add8(d, b, e) & inc8_6(e, c))
;

mu bool mul8(Int8 a, Int8 b, Int8 c)
  if(a = 0 | b = 0) c = 0
  else
  if(a = 1) c = b
  else
  if(b = 1) c = a
  else (exists Int8 d, Int8 e. inc8_6(d, a) & mul8(d, b, e) & add8(b, e, c))
