#!/bin/sh

# Remove all the generated directories int `bin', `obj', and `lib'
#
for dir in bin obj
do
  for os in linux sunos solaris
  do
    for processor in intel sparc
    do
      rm -rf $dir/$os-$processor
    done
  done
  rm -f $dir/LINK
done

# Remove files generated by the configure script
#
rm -f src/config.h
rm -f .configuration
